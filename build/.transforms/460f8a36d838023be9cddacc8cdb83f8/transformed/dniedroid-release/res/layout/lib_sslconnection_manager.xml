<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sslConnRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:visibility="gone"
            android:id="@+id/sslConnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="@string/lib_netcomm_secure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressRead"
            style="@android:style/Widget.Holo.ProgressBar.Large"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_gravity="center_horizontal"
            android:max="100" />
        <TextView
            android:visibility="gone"
            android:id="@+id/sslConnDescription"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/lib_result_ok_description"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size" />
        <ImageView
            android:id="@+id/sslConnResultImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:contentDescription="@string/lib_netcomm_secure"
            android:src="@drawable/grey_sec_conn_bg" />
    </LinearLayout>
</RelativeLayout>