<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nfcCommRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/nfcCommLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom">
           <TextView
                android:id="@+id/nfcCommTitle"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lib_nfc_device_close"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/nfcCommResultImg"
                android:visibility="gone"
                android:contentDescription="@string/lib_nfc_result_desc"
                android:src="@drawable/warning_ico"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/nfcCommDescription"
                android:visibility="gone"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/lib_result_ok_description"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressRead"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="wrap_content"
                android:layout_width="160dp"
                android:layout_gravity="center|center_horizontal"
                android:max="100" />
           <ImageView
                android:id="@+id/dnieImg"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/lib_nfc_logo_desc"
                android:src="@drawable/dni30_grey_peq"/>
    </LinearLayout>
</RelativeLayout>